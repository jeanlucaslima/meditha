---
import { primaryBrandLogo } from '../../lib/images';

export interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  href?: string;
}

const {
  size = 'md',
  class: className = '',
  href = '/'
} = Astro.props;

const sizeClasses = {
  sm: 'h-8',
  md: 'h-10',
  lg: 'h-14'
} as const;

const heightClass = sizeClasses[size] ?? sizeClasses.md;
---

<a href={href} class={`inline-flex items-center ${className}`} aria-label={primaryBrandLogo.alt}>
  <img
    src={primaryBrandLogo.src}
    alt={primaryBrandLogo.alt}
    class={`w-auto ${heightClass}`}
    loading="eager"
    decoding="async"
  />
</a>
